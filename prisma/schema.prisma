generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(100)
  email     String   @unique @db.VarChar(100)
  password  String   @db.VarChar(255)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assets       Asset[]
  transactions Transaction[]
  dividends    Dividend[]

  @@map("users")
}

model Asset {
  id           Int      @id @default(autoincrement())
  userId       Int      @map("user_id")
  ticker       String   @db.VarChar(10)
  name         String   @db.VarChar(100)
  type         String   @db.VarChar(20)
  quantity     Decimal  @db.Decimal(18, 4) @default(0)
  averagePrice Decimal  @db.Decimal(18, 2) @default(0) @map("average_price")
  currentPrice Decimal? @db.Decimal(18, 2) @map("current_price")
  sector       String?  @db.VarChar(50)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  dividends    Dividend[]

  @@index([userId])
  @@map("assets")
}

model Transaction {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  assetId   Int      @map("asset_id")
  type      String   @db.VarChar(10)
  quantity  Decimal  @db.Decimal(18, 4)
  price     Decimal  @db.Decimal(18, 2)
  total     Decimal  @db.Decimal(18, 2)
  date      DateTime
  createdAt DateTime @default(now()) @map("created_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  asset Asset @relation(fields: [assetId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([assetId])
  @@map("transactions")
}

model Dividend {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  assetId   Int      @map("asset_id")
  type      String   @db.VarChar(20) // DIVIDENDO, JCP, RENDIMENTO
  value     Decimal  @db.Decimal(18, 2)
  date      DateTime
  notes     String?  @db.Text
  createdAt DateTime @default(now()) @map("created_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  asset Asset @relation(fields: [assetId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([assetId])
  @@map("dividends")
}
